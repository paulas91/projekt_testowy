<%= turbo_frame_tag dom_id(message) do %>
  <div class="d-flex flex-row <%= my_message_class(message, current_user) %>">
    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3-bg.webp"
        alt="avatar 1" style="width: 45px; height: 100%;">
    <div>
      <% if message.sender_id == current_user.id %>
        <p class="small p-2 me-3 mb-1 text-white rounded-3 bg-primary"><%= message.body %></p>
      <% else %>
        <p class="small p-2 ms-3 mb-1 rounded-3" style="background-color: #f5f6f7;">
          <%= message.body %>
        </p>
      <% end %>
      <p class="small ms-3 mb-3 rounded-3 text-muted"><%= message.created_at %></p>
    </div>
  </div>
<% end %>
