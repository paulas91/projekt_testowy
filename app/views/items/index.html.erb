<p style="color: green"><%= notice %></p>

<h1>Items</h1>

<%= link_to "New item", new_item_path, class: "btn btn-primary btn-sm"  %>

<div id="items", class="container-fluid">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Active</th>
        <th>Borrowed</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.active %></td>
          <td><%= item.borrowed %></td>
          <td><%= link_to "Show this item", item, class: "btn btn-primary btn-sm" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

