<!DOCTYPE html>
<html>
  <head>
    <title>Nowaaplikacja</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <%= turbo_include_tags %>
    <%= action_cable_meta_tag %>
    <%= hotwire_livereload_tags if Rails.env.development? %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

  </head>

  <body class="container">
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert"><%= alert %></p>
  <% end %>
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <p class="navbar-brand"><%= app_title %></p>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <%= render "shared/nav_link", label: "All", path: root_path %>
            <%= render "shared/nav_link", label: "Active", path: active_items_path %>
            <%= render "shared/nav_link", label: "Inactive", path: inactive_items_path %>
            <%= render "shared/nav_link", label: "Borrowed", path: borrowed_items_path %>
            <%= render "shared/nav_link", label: "On place", path: on_place_items_path %>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
